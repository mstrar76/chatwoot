# Chatwoot Agent Service Environment Configuration
# Copy this file to .env and configure with your actual values

# ===================
# REQUIRED VARIABLES
# ===================

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Chatwoot Integration
CHATWOOT_API_TOKEN=your-chatwoot-api-token-here

# ===================
# OPTIONAL VARIABLES
# ===================

# Database Configuration (defaults to omnineural setup)
DATABASE_URL=postgres://omniadmin:omni4518pgdb@omnineural_postgres:5432/omnicore
PGVECTOR_DATABASE_URL=postgres://omniadmin:omni4518pgdb@omnineural_postgres:5432/omnicore

# Chatwoot Configuration
CHATWOOT_API_URL=http://omnineural_chatwoot:3000
CHATWOOT_WEBHOOK_SECRET=optional-webhook-secret-for-signature-verification

# Redis Configuration
REDIS_URL=redis://default:omni4518redis@redis-stack:6379

# LLM Configuration
OPENAI_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=1024

# Agent Configuration
AGENT_CONFIG_PATH=/app/config/agent_config.json
LOG_LEVEL=info
ENVIRONMENT=production

# Performance Configuration
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT_SECONDS=30
WEBHOOK_SIGNATURE_VERIFICATION=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Cost Control Configuration
DAILY_BUDGET_USD=50.0
MONTHLY_BUDGET_USD=1000.0
ALERT_THRESHOLD_PERCENT=80.0

# Data and CSV Configuration
CSV_DATA_PATH=/app/config/data
CSV_CACHE_TTL_MINUTES=5

# RAG Configuration
RAG_TOP_K=4
RAG_SIMILARITY_THRESHOLD=0.7
RAG_TIME_WINDOW_DAYS=90

# Monitoring and Observability
ENABLE_METRICS=true
METRICS_PORT=8083
HEALTH_CHECK_INTERVAL=30

# Security Configuration
ENABLE_CORS=true
CORS_ORIGINS=*
MAX_REQUEST_SIZE_MB=10

# ===================
# DEVELOPMENT ONLY
# ===================

# Development Configuration (uncomment for local development)
# ENVIRONMENT=development
# LOG_LEVEL=debug
# CHATWOOT_API_URL=http://localhost:3001
# DATABASE_URL=postgres://postgres:password@localhost:5432/chatwoot_development
# REDIS_URL=redis://localhost:6379